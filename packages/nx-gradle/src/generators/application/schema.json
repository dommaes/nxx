{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "Application",
  "title": "Application",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use?"
    },
    "tags": {
      "type": "string",
      "description": "Add tags to the project (used for linting)",
      "alias": "t"
    },
    "directory": {
      "type": "string",
      "description": "A directory where the project is placed",
      "alias": "d"
    },
    "dsl": {
      "description": "Sets the DSL",
      "type": "string",
      "enum": ["kotlin", "groovy"],
      "default": "kotlin",
      "x-prompt": {
        "message": "The DSL to use for Gradle configuration.",
        "type": "list",
        "items": [
          {
            "value": "kotlin",
            "label": "Kotlin"
          },
          {
            "value": "groovy",
            "label": "Groovy"
          }
        ]
      }
    },
    "rootProjectName": {
      "description": "The Gradle root project name.",
      "type": "string",
      "pattern": "^[a-zA-Z].*"
    },
    "useInstalledGradle": {
      "description": "Use Gradle installed on this machine",
      "type": "boolean",
      "default": false
    },
    "gradleVersion": {
      "description": "The Gradle version",
      "type": "string",
      "pattern": "^\\d\\.\\d\\.\\d$"
    },
    "skipFormat": {
      "description": "Skip formatting files.",
      "type": "boolean",
      "default": false
    }
  },
  "required": ["name", "dsl"]
}
