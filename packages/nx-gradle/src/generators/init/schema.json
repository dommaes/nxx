{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "NxGradleInit",
  "title": "Init",
  "type": "object",
  "properties": {
    "dsl": {
      "description": "Sets the DSL",
      "type": "string",
      "default": "kotlin",
      "x-prompt": {
        "message": "Which DSL would you like to use?",
        "type": "list",
        "items": [
          {
            "value": "kotlin",
            "label": "Kotlin"
          },
          {
            "value": "groovy",
            "label": "Groovy"
          }
        ]
      }
    },
    "rootProjectName": {
      "type": "string",
      "description": "Sets the root project name",
      "pattern": "^[a-zA-Z].*"
    }
  },
  "required": ["dsl"]
}
